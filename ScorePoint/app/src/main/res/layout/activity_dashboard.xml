<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.ipointsystems.scorepoint.DashboardActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_main"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="@color/white" />

        <Button
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top"
            android:textColor="@color/white" />

        <Button
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/white" />

    </LinearLayout>

    <SearchView
        android:id="@+id/activity_dashboard_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@android:drawable/dialog_holo_light_frame" />

    <ListView
        android:id="@+id/activity_dashboard_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/activity_dashboard_search"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@android:drawable/dialog_holo_light_frame" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join current match"
            android:textColor="@color/theme_main" />


    </LinearLayout>

</RelativeLayout>
