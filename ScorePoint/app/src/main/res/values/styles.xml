<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_main</item>
        <item name="colorPrimaryDark">@color/theme_dark</item>
        <item name="colorAccent">@color/theme_main</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewWhite">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewQuestionTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewSection">
        <item name="android:textColor">@color/gray5</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewHeaderBlue" parent="TextViewHeader">
        <item name="android:textColor">@color/theme_main</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewHeaderWhite" parent="TextViewHeader">
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewHeaderStart" parent="TextViewHeader">
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="FlatButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <dimen name="font_large">22sp</dimen>
    <dimen name="font_normal">18sp</dimen>
</resources>
